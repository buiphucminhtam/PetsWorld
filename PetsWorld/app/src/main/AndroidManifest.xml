<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minhtam.petsworld">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activity.LoginActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.PlacePostActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activity.EditUserInfoActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activity.ImageActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activity.InsertPetInfoActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".Activity.FindOwnerItemDetailActivity"></activity>
    </application>

</manifest>