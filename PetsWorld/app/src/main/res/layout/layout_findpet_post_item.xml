<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    >

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="5dp"
            android:id="@+id/tvFindPetItem_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/usernamecolor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFindPetItem_Datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09-06-1995"
            android:textColor="@color/text_msg_input"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFindPetItem_Location"
            android:textColor="@color/text_msg_input"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_petinfo_layout"/>

        <ImageView
            android:id="@+id/imvFindPetItem_bigimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvFindPetItem_ListImage"
            android:scrollbars="horizontal">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</android.support.v7.widget.CardView>