<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/com_facebook_button_login_silver_background_color"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imgUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="None"
                android:padding="8dp"
                android:textColor="@color/text_msg_input"
                android:textSize="15dp" />
        </android.support.v7.widget.FitWindowsLinearLayout>




        <android.support.v7.widget.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="None"
                android:padding="8dp"
                android:textColor="@color/text_msg_input"
                android:textSize="15dp" />
        </android.support.v7.widget.FitWindowsLinearLayout>

        <android.support.v7.widget.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvPhoneNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="None"
                android:padding="8dp"
                android:textColor="@color/text_msg_input"
                android:textSize="15dp" />
        </android.support.v7.widget.FitWindowsLinearLayout>


    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>